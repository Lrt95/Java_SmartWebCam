<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="fxmlController.ApplicationController" xmlns:fx="http://javafx.com/fxml"
          prefHeight="720" prefWidth="1280"
          hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints minWidth="10.0" percentWidth="50.0" />
        <ColumnConstraints minWidth="10.0" percentWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="40.0" />
        <RowConstraints minHeight="10.0" percentHeight="60.0" />
    </rowConstraints>

    <GridPane GridPane.rowIndex="0" GridPane.columnIndex="0" hgap="10" vgap="10" >
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" percentWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" percentHeight="10.0" />
            <RowConstraints minHeight="10.0" percentHeight="70.0" />
            <RowConstraints minHeight="10.0" percentHeight="20.0" />
        </rowConstraints>

        <GridPane GridPane.rowIndex="0" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="10.0" percentWidth="20.0" />
                <ColumnConstraints minWidth="10.0" percentWidth="80.0" />
            </columnConstraints>

            <Button GridPane.columnIndex="0" text="Select picture" onAction="#selectPictureButtonClick" />
            <Text GridPane.columnIndex="1" id="lblPath" fx:id="textPath" text="Path :" />
        </GridPane>

        <GridPane GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.halignment="CENTER">
            <ImageView fx:id="imageView"
                       fitHeight="200"
                       pickOnBounds="true" preserveRatio="true"
            />
        </GridPane>

        <GridPane GridPane.rowIndex="2" hgap="10" vgap="10" >
            <columnConstraints>
                <ColumnConstraints minWidth="10.0" percentWidth="33.3" />
                <ColumnConstraints minWidth="10.0" percentWidth="33.3" />
                <ColumnConstraints minWidth="10.0" percentWidth="33.3" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" percentHeight="50.0" />
                <RowConstraints minHeight="10.0" percentHeight="50.0" />
            </rowConstraints>

            <Text GridPane.rowIndex="0" GridPane.columnIndex="0" text="Description :"/>
            <Text GridPane.rowIndex="1" GridPane.columnIndex="0" text="Index :" fx:id="textIndex"/>
            <Text GridPane.rowIndex="1" GridPane.columnIndex="1" text="Object :" fx:id="textObject"/>
            <Text GridPane.rowIndex="1" GridPane.columnIndex="2" text="Probability :" fx:id="textProbability"/>
        </GridPane>

    </GridPane>

    <GridPane GridPane.rowIndex="0" GridPane.columnIndex="1" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" percentWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" percentHeight="10.0" />
            <RowConstraints minHeight="10.0" percentHeight="90.0" />
        </rowConstraints>
        <GridPane GridPane.rowIndex="0" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="10.0" percentWidth="20.0" />
                <ColumnConstraints minWidth="10.0" percentWidth="80.0" />
            </columnConstraints>

            <Button text="Select save folder" onAction="#selectSaveFolderButtonClick" />
            <Text GridPane.columnIndex="1" id="lblPath" fx:id="textFolder" text="Path :" />
        </GridPane>
    </GridPane>

</GridPane>
